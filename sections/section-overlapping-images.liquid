      "label": "Image link"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second image"
    },
    {
      "type": "url",
      "id": "image_link_2",
      "label": "Second image link"
    },
    {
      "type": "checkbox",
      "id": "hide_image_2",
